<view class="logoWrap">
  <image src="../../image/logo.png"></image>
</view>

<view class="signWrap">
  <view class="sign_item">
    <text>用户名：</text>
    <input placeholder="请输入用户名" bindinput="userName"/>
  </view>
  <view class="sign_item">
    <text>公司名称：</text>
    <input placeholder="请输入公司名称" bindinput="enterpriseName"/>
  </view>
  <view class="sign_item">
    <text>联系人：</text>
    <input placeholder="请输入联系人" bindinput="contactPerson"/>
  </view>
  <view class="sign_item">
    <text>手机号码：</text>
    <input type="number" placeholder="请输入手机号码" bindinput="enterprisePhone"/>
  </view>
  <view class="sign_item">
    <text>密码：</text>
    <input placeholder="请输入密码" type="password" bindinput="psd"/>
  </view>
  <view class="sign_item">
    <text>确认密码：</text>
    <input placeholder="请再次输入密码" type="password" bindinput="psdAgain"/>
  </view>

  <button class="submitBt btBackground" type="" disabled="{{canDo}}" bindtap="submitSign">提交</button>
</view>

<loading hidden="{{loadingHidden}}">
  加载中...
</loading>
