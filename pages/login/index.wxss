.logoWrap{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  }
.logoWrap image{
  width: 150rpx;
  height: 150rpx;
}
.loginWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* margin-top: 20px; */
}
.login_item{
  width: 80%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.login_icon{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login_icon image{
  width: 50rpx;
  height: 50rpx;
}
input{
  width: 500rpx;
  height: 100%;
  border-bottom: 1px solid #eee;
  padding: 0 20rpx;
}
.addBlock{
  width: 75%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}
.addBlock text{
  width: 100%;
  height: 100%;
  color: #666;
  font-size: 30rpx;
}
.addBlock text:nth-of-type(2){
  text-align: right;
}
.submitBt{
  width: 50%;
  margin-top: 20px;
}
.introduction{
  background: #4169E1;
  color: #fff;
}
.footer{
  width: 100%;
  height: 50rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer text{
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  color: #333;
}

/*tabBar*/
.tabBar{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  background: #7F0019;
}
.tabBar text{
  flex: 1;
  text-align: center;
  color: #fff;
}